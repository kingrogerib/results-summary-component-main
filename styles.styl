
body
  font-size: 18px
  font-family: 'Hanken Grotesk', sans-serif
  margin: 0
  padding: 0
  font-weight: 700

.container
  display: flex;
  justify-content: space-evenly
  background-color: hsl(0, 0%, 100%)
  align-items: center
  position: absolute
  overflow: hidden
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%)
  border-radius: 16px
  width: 640px
  height: 480px
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2)
  .top-container
    display: flex
    flex-direction: column
    justify-content: space-evenly
    align-items: center
    background-image: linear-gradient(to bottom, hsl(252, 100%, 67%), hsl(241, 81%, 54%))
    text-align: center
    border-radius: 20px
    height: 100%
    color: hsl(0, 0%, 100%)
    .result 
      font-size: 2rem
      font-weight: 700
    .score-text
      color: hsl(0, 0%, 80%)
      margin: 0px 40px 30px 40px
      font-weight: 500
    h1
      color: hsl(0, 0%, 80%)
      font-size: 1.5rem
    .circle-container
      background-image: linear-gradient(to bottom,hsla(256, 72%, 46%, 1), hsla(241, 72%, 46%, 0))
      border-radius: 50%
      width: 180px;
      height: 180px;
      display: flex
      flex-direction: column
      justify-content: center
      align-items: center
      margin-bottom: 10px
      .big-number
        font-size: 4rem
        font-weight: 800
      .small-number
        color: hsl(0, 0%, 80%)
  .bottom-container
    width: 80%
    height: 75%
    padding: 0 20px 20px 20px
    .yellow-box
      color: hsl(39, 100%, 56%)
      background-color: hsl(39, 100%, 95%)
    .orange-box
      color: hsl(0, 100%, 67%)
      background-color: hsl(0, 100%, 95%)
    .blue-box
      color: hsl(234, 85%, 45%)
      background-color: hsl(234, 85%, 95%)
    .green-box
      color: hsl(166, 100%, 30%)
      background-color: hsl(166, 100%, 98%)
    .result-container
      margin-bottom: 18px
      border-radius: 10px
      height: 46px
      display: flex
      justify-content: space-between
      align-items: center
      .hundred
       color: hsl(0, 0%, 80%)
      .item:nth-child(3)
        margin-left: auto
        margin-right: 10px
      .item:nth-child(1)
        margin-right: 10px
      img
        object-fit: cover
        object-position: center
        height: 25px
        margin-left: 10px
    button
      background-color: hsl(224, 30%, 27%)
      border: none
      height: 60px
      width: 100%
      color: white
      font-family: 'Hanken Grotesk'
      font-size: 18px
      border-radius: 25px
      &:hover
        cursor: pointer
        background-image: linear-gradient(to bottom, hsl(252, 100%, 67%), hsl(241, 81%, 54%))
    .black-number
      color: hsl(0, 0%, 20%)

@font-face 
  font-family: 'Hanken Grotesk'
  src: url('../assets/fonts/HankenGrotesk-VariableFont_wght.ttf') format('truetype')
  font-weight: 500 800
  font-stretch: 50% 200%

@media (max-width: 505px)
  .container 
    width: 100%
    height: 100%
    flex-direction: column
    box-shadow: none
